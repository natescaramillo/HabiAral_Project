<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fitsSystemWindows="false"
    tools:context=".Fragment.HomeFragment">

    <!-- Header -->

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="353dp"
        android:layout_height="262dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/idle"
        android:translationZ="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/ala_sans"
            android:text="Maligayang Pagbalik,"
            android:textColor="#A27B5C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nickname_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/textView17"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/ala_sans"
            android:text="Nickname"
            android:textColor="#A27B5C"
            android:textSize="18sp" />

    </RelativeLayout>

    <!-- Character Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="87dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/character_Line_homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ala_sans"
                    android:text="Tara na at matuto!"
                    android:textColor="#A27B5C"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/character_Line_homepage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ala_sans"
                    android:text="Salamat sa pag gamit."
                    android:textColor="#A27B5C"
                    android:textSize="15sp" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp"> <!-- space for bottom nav -->

            <!-- Mga Paksang Tatalakayin -->
            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingVertical="20dp"
                android:paddingStart="10dp"
                android:fontFamily="@font/special"
                android:background="#E0B782"
                android:text="Mga Paksang Tatalakayin"
                android:textColor="#A27B5C"
                android:textSize="25sp" />

            <!-- Lessons Horizontal Scroll -->
            <HorizontalScrollView
                android:id="@+id/lessonsScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <!-- Bahagi -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/bahagi_cardView"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/bahagi_view"
                                android:layout_width="match_parent"
                                android:layout_height="185dp"
                                android:alpha="0.8"
                                android:background="@drawable/home_bahagi"
                                android:scaleType="fitCenter" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ala_sans"
                                    android:text="Bahagi ng Pananalita"
                                    android:textColor="#A27B5C"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Kayarian -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/kayarian_cardView"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/kayarian_view"
                                android:layout_width="match_parent"
                                android:layout_height="185dp"
                                android:alpha="0.8"
                                android:background="@drawable/home_kayarian"
                                android:scaleType="fitCenter" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ala_sans"
                                    android:text="Kayarian ng Pangungusap"
                                    android:textColor="#A27B5C"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Panitikan -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/panitikan_cardView"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:clickable="true"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/panitikan_view"
                                android:layout_width="match_parent"
                                android:layout_height="185dp"
                                android:alpha="0.8"
                                android:background="@drawable/home_pagunawa"
                                android:scaleType="fitCenter" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ala_sans"
                                    android:text="Panitikan"
                                    android:textColor="#A27B5C"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Mga Pantulong na Kagamitan -->

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="#E0B782"
                android:fontFamily="@font/special"
                android:paddingVertical="20dp"
                android:paddingStart="10dp"
                android:text="Mga Pantulong na Kagamitan"
                android:textColor="#A27B5C"
                android:textSize="25sp" />

            <HorizontalScrollView
                android:id="@+id/kagamitanScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <!-- Diksyonaryo Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/talasalitaan_cardView"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/view6"
                                android:layout_width="match_parent"
                                android:layout_height="185dp"
                                android:adjustViewBounds="true"
                                android:alpha="0.8"
                                android:background="@drawable/diksyonaryo"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/textView31"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ala_sans"
                                    android:text="Diksyonaryo"
                                    android:textColor="#A27B5C"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Palaro Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/palaro_cardView"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/view8"
                                android:layout_width="match_parent"
                                android:layout_height="185dp"
                                android:adjustViewBounds="true"
                                android:alpha="0.8"
                                android:background="@drawable/home_palaro"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/textView32"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ala_sans"
                                    android:text="Palaro"
                                    android:textColor="#A27B5C"
                                    android:textSize="13sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>
