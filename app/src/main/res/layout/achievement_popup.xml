<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:background="@drawable/pop_up_main_color"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/imagepop_up"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:background="@drawable/rounded_image"
        android:src="@drawable/a1" />;.

    <ImageView
        android:id="@+id/xmark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/xmark" />

    <TextView
        android:id="@+id/achievement_name"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/special"
        android:textColor="#ffffff"
        android:text="Achievement 1" />

    <TextView
        android:id="@+id/description"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/special"
        android:gravity="center"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit laboris nisi ut aliquip ex ea commodo consequat."
        android:textColor="#ffffff" />
</RelativeLayout>