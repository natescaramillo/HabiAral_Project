<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_up_main_color"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="600dp"
        android:fillViewport="true"
        android:scrollbarSize="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Header -->
            <TextView
                android:id="@+id/game_mechanic_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:text="Paano Laruin ang Palaro"
                android:textColor="#3A2A09"
                android:textSize="30dp" />

            <!-- Subheader -->
            <TextView
                android:id="@+id/how"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/special"
                android:text="Mga Hakbang:"
                android:textColor="#3A2A09"
                android:textSize="20dp" />

            <!-- STEP 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="Hakbang 1"
                    android:textColor="#3A2A09"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:contentDescription="Hakbang 1 larawan"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/special"
                android:text="Pindutin ang 'Simula' upang umpisahan ang mini-game."
                android:textColor="#3A2A09"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- STEP 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="Hakbang 2"
                    android:textColor="#3A2A09"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:contentDescription="Hakbang 2 larawan"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/special"
                android:text="Sagutin ang mga tanong o kumpletuhin ang mga gawain."
                android:textColor="#3A2A09"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- STEP 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="Hakbang 3"
                    android:textColor="#3A2A09"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:contentDescription="Hakbang 3 larawan"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/special"
                android:text="Iwasan ang mga maling sagot o mga hadlang."
                android:textColor="#3A2A09"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- STEP 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="Hakbang 4"
                    android:textColor="#3A2A09"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:contentDescription="Hakbang 4 larawan"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/special"
                android:text="Tapusin ang laro at subukang makuha ang mataas na puntos!"
                android:textColor="#3A2A09"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- OKAY BUTTON -->
            <Button
                android:id="@+id/btn_isara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isara"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:backgroundTint="#3A2A09"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/special"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
