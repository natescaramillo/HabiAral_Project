<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_up_main_color"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxHeight="600dp"
        android:fillViewport="true"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Header -->
            <TextView
                android:id="@+id/game_mechanic_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:text="Paano Laruin ang Palaro"
                android:textColor="#3A2A09"
                android:textSize="30sp" />

            <!-- Subheader -->
            <TextView
                android:id="@+id/how"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/special"
                android:text="Mga Hakbang:"
                android:textColor="#3A2A09"
                android:textSize="20sp" />

            <!-- STEP 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="Hakbang 1"
                    android:textColor="#3A2A09"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="183dp"
                    android:layout_height="130dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Hakbang 1 larawan"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hakbang_1" />

                <!-- Add valid image source -->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/special"
                android:text="Pindutin ang Mapipiling Pindutan upang umpisahan ang Palaro."
                android:textColor="#3A2A09"
                android:textSize="14sp" />

            <!-- STEP 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="Hakbang 2"
                    android:textColor="#3A2A09"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="182dp"
                    android:layout_height="130dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Hakbang 2 larawan"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hakbang_2" />
                <!-- Add valid image source -->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/special"
                android:text="Sagutin ang mga tanong o kumpletuhin ang mga gawain bago maubos ang oras."
                android:textColor="#3A2A09"
                android:textSize="14sp" />

            <!-- STEP 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="Hakbang 3"
                    android:textColor="#3A2A09"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="130dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Hakbang 3 larawan"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hakbang_3" /> <!-- Add valid image source -->
            </LinearLayout>

            <!-- STEP 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="Hakbang 4"
                    android:textColor="#3A2A09"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="178dp"
                    android:layout_height="130dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Hakbang 4 larawan"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hakbang_4" /> <!-- Add valid image source -->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/special"
                android:text="Tapusin ang laro at subukang makuha ang mataas na puntos!"
                android:textColor="#3A2A09"
                android:textSize="14sp" />

            <!-- OKAY BUTTON -->
            <Button
                android:id="@+id/btn_isara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isara"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:backgroundTint="#3A2A09"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/special"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
