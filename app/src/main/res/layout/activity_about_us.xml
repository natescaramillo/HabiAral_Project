<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background"
    tools:context=".Activity.AboutUsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewHeader"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:alpha="0.6"
            android:background="#A27B5C"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/special"
            android:gravity="center"
            android:text="Tungkol sa Amin"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/viewHeader"
            app:layout_constraintBottom_toBottomOf="@id/viewHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageMascot"
            android:layout_width="264dp"
            android:layout_height="144dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/viewHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/cut_tarshir" />

        <LinearLayout
            android:id="@+id/linearAboutUs"
            android:layout_width="326dp"
            android:layout_height="161dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/search_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageMascot">

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/special"
                android:justificationMode="inter_word"
                android:text="Sa HabiAral, layunin naming bigyang-kapangyarihan ang mga mag-aaral sa pamamagitan ng madaling gamiting plataporma para sa epektibong pagkatuto at pagsubaybay ng kanilang pag-unlad."
                android:textAlignment="viewStart" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewOurTeamTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/special"
            android:text="AMING GRUPO"
            android:textColor="#4C2121"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/linearAboutUs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/linearOurTeam"
            android:layout_width="326dp"
            android:layout_height="166dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/search_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewOurTeamTitle">

            <TextView
                android:id="@+id/textTeamDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/special"
                android:justificationMode="inter_word"
                    android:text="Ang HabiAral ay binubuo ng mga estudyanteng designer at developer upang itaguyod ang pagkatuto, pagtutulungan, at tagumpay sa larangan ng edukasyong Pilipino na naglalayong paunlarin ang kasanayan sa pagbuo ng pangungusap at pag-unawa."
                android:textAlignment="viewStart" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewJoinUsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/special"
            android:text="SAMAHAN NIYO KAMI"
            android:textColor="#4C2121"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/linearOurTeam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/linearJoinUs"
            android:layout_width="326dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/search_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewJoinUsTitle">

            <TextView
                android:id="@+id/textFinalNote"
                android:layout_width="257dp"
                android:layout_height="62dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/special"
                android:justificationMode="inter_word"
                android:text="Salamat sa pagpili ng HabiAral! Nawaâ€™y maging kapaki-pakinabang ito sa inyo gaya ng kasiyahang nadama namin sa paggawa nito"
                android:textAlignment="viewStart" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


