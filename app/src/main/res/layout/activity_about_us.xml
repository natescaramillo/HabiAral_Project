<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_background"
    tools:context=".Activity.AboutUsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewHeader"
            android:layout_width="0dp"
            android:layout_height="93dp"
            android:alpha="0.6"
            android:background="#A27B5C"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/special"
            android:gravity="center"
            android:text="About Us"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/viewHeader"
            app:layout_constraintBottom_toBottomOf="@id/viewHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageMascot"
            android:layout_width="264dp"
            android:layout_height="144dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/viewHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/cut_tarshir" />

        <LinearLayout
            android:id="@+id/linearAboutUs"
            android:layout_width="326dp"
            android:layout_height="161dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/search_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageMascot">

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/special"
                android:justificationMode="inter_word"
                android:text="At HabiAral, we strive to empower learners through personalized educational tools. Our goal is to provide students with an intuitive, easy-to-use platform that helps them track their academic progress, learn effectively, and develop new skills at their own pace."
                android:textAlignment="viewStart" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewOurTeamTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/special"
            android:text="OUR TEAM"
            android:textColor="#4C2121"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/linearAboutUs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/linearOurTeam"
            android:layout_width="326dp"
            android:layout_height="166dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/search_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewOurTeamTitle">

            <TextView
                android:id="@+id/textTeamDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/special"
                android:justificationMode="inter_word"
                android:text="A dedicated team of designers, developers, and students creates HabiAral. Our constant efforts are directed at developing an app that promotes community and teamwork in addition to academic success. We appreciate ingenuity, commitment, and lifelong learning."
                android:textAlignment="viewStart" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewJoinUsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/special"
            android:text="JOIN US ON OUR JOURNEY"
            android:textColor="#4C2121"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/linearOurTeam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/linearJoinUs"
            android:layout_width="326dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/search_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewJoinUsTitle">

            <TextView
                android:id="@+id/textFinalNote"
                android:layout_width="257dp"
                android:layout_height="62dp"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/special"
                android:justificationMode="inter_word"
                android:text="Thank you for choosing HabiAral! We hope you enjoy using it as much as we enjoyed building it."
                android:textAlignment="viewStart" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


