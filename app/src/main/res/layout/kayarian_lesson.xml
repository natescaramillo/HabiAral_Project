<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/lesson_idle_gif"
        android:layout_width="523dp"
        android:layout_height="305dp"
        android:scaleType="centerCrop"
        android:src="@drawable/idle"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bottom_bar_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline38"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/lesson_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/background_with_border"
            android:clipToOutline="true"
            android:scaleType="fitXY"
            android:src="@drawable/cover_page"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021" />

        <ImageView
            android:id="@+id/lesson_image2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@drawable/background_with_border"
            android:clipToOutline="true"
            android:scaleType="fitXY"
            android:src="@drawable/cover_page"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/lesson_image"
            app:layout_constraintEnd_toEndOf="@+id/lesson_image"
            app:layout_constraintStart_toStartOf="@+id/lesson_image"
            app:layout_constraintTop_toTopOf="@+id/lesson_image"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/example_image"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/background_with_border"
            android:clipToOutline="true"
            android:scaleType="fitXY"
            android:src="@drawable/cover_page"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lesson_image" />

        <ImageView
            android:id="@+id/example_image2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_with_border"
            android:clipToOutline="true"
            android:scaleType="fitXY"
            android:src="@drawable/cover_page"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/example_image"
            app:layout_constraintEnd_toEndOf="@+id/example_image"
            app:layout_constraintStart_toStartOf="@+id/example_image"
            app:layout_constraintTop_toBottomOf="@+id/lesson_image"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button_unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_button_achievement"
            android:fontFamily="@font/special"
            android:text="Pagsusulit"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/example_image"
            app:layout_constraintVertical_bias="0.989" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.21691792" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4078727" />

</androidx.constraintlayout.widget.ConstraintLayout>


