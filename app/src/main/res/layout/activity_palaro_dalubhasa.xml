<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questionDalubhasa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/question_bg_drawable"
    tools:context=".Activity.PalaroDalubhasa">


    <LinearLayout
        android:id="@+id/instructionBox"
        android:layout_width="368dp"
        android:layout_height="155dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="#FFEFEA"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="79dp">

        <TextView
            android:id="@+id/instructionText"
            android:layout_width="288dp"
            android:layout_height="99dp"
            android:layout_weight="1"
            android:fontFamily="@font/special"
            android:text="Bumuo ka ng taguntong na gumagamit ng bahagi ng pananalita tungkol sa iyong paboritong aktibidad."
            android:textColor="#000000"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="150dp" />

        <ImageView
            android:id="@+id/characterIcon"
            android:layout_width="52dp"
            android:layout_height="101dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/tarsier_removebg" />
    </LinearLayout>

    <View
            android:id="@+id/bottomBar"
            android:layout_width="391dp"
            android:layout_height="421dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bottom_bar_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icons8_heart_48"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="316dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icons8_heart_48"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="316dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icons8_heart_48"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="316dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icons8_heart_48"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="316dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icons8_heart_48"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="316dp" />

    <ProgressBar
        android:id="@+id/timerBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:backgroundTint="#E0E0E0"
        android:clipToOutline="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/custom_progress_drawable"
        android:progressTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="384dp" />

    <TextView
        android:id="@+id/answerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/special"
        android:text="Sagot mo:"
        android:textColor="#000"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="458dp" />

    <EditText
        android:id="@+id/answerInput"
        android:layout_width="365dp"
        android:layout_height="170dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_rect"
        android:gravity="top|start"
        android:hint="Ilagay ang iyong sagot dito..."
        android:inputType="textMultiLine"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answerLabel" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answerInput"/>

</androidx.constraintlayout.widget.ConstraintLayout>
