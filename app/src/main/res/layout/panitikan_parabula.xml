<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Story 1 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/kwento1"
                android:layout_width="330dp"
                android:layout_height="193dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_rect"
                android:clickable="true"
                android:focusable="true"
                android:clipToOutline="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/kwento1Image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tarsier_kwento1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <TextView
                    android:id="@+id/kwento1Title"
                    android:layout_width="230dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text="ANG ALAMAT NG ROSAS"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <FrameLayout
                    android:id="@+id/kwento1Lock"
                    android:layout_width="49dp"
                    android:layout_height="44dp"
                    android:background="@drawable/square"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/kwento1Image"
                    app:layout_constraintBottom_toBottomOf="@id/kwento1Image"
                    app:layout_constraintStart_toStartOf="@id/kwento1Image"
                    app:layout_constraintEnd_toEndOf="@id/kwento1Image">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/design_lock" />

                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Story 2 -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/kwento2"
                android:layout_width="330dp"
                android:layout_height="193dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rect"
                android:clickable="true"
                android:clipToOutline="true"
                android:focusable="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/kwento2Image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/agila"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <TextView
                    android:id="@+id/kwento2Title"
                    android:layout_width="226dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text="ANG KALAPATI AT ANG AGILA"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <FrameLayout
                    android:id="@+id/kwento2Lock"
                    android:layout_width="49dp"
                    android:layout_height="44dp"
                    android:background="@drawable/square"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/kwento2Image"
                    app:layout_constraintHorizontal_bias="0.942"
                    app:layout_constraintStart_toStartOf="@+id/kwento2Image"
                    app:layout_constraintTop_toTopOf="@+id/kwento2Image"
                    app:layout_constraintVertical_bias="0.483">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/design_lock" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Story 3 -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/kwento3"
                android:layout_width="330dp"
                android:layout_height="193dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rect"
                android:clickable="true"
                android:clipToOutline="true"
                android:focusable="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/kwento3Image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/kakanin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <TextView
                    android:id="@+id/kwento3Title"
                    android:layout_width="233dp"
                    android:layout_height="43dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text="NAGTITINDA NG KAKANIN SI JUAN PUSONG"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <FrameLayout
                    android:id="@+id/kwento3Lock"
                    android:layout_width="49dp"
                    android:layout_height="44dp"
                    android:background="@drawable/square"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/kwento3Image"
                    app:layout_constraintHorizontal_bias="0.942"
                    app:layout_constraintStart_toStartOf="@+id/kwento3Image"
                    app:layout_constraintTop_toTopOf="@+id/kwento3Image">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/design_lock" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Story 4 -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/kwento4"
                android:layout_width="330dp"
                android:layout_height="193dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_rect"
                android:clickable="true"
                android:clipToOutline="true"
                android:focusable="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/kwento4Image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/sulayman"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <TextView
                    android:id="@+id/kwento4Title"
                    android:layout_width="233dp"
                    android:layout_height="43dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text="INDARAPATRA AT SULAYMAN"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <FrameLayout
                    android:id="@+id/kwento4Lock"
                    android:layout_width="49dp"
                    android:layout_height="44dp"
                    android:background="@drawable/square"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/kwento4Image"
                    app:layout_constraintHorizontal_bias="0.942"
                    app:layout_constraintStart_toStartOf="@+id/kwento4Image"
                    app:layout_constraintTop_toTopOf="@+id/kwento4Image">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/design_lock" />
                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/view1"
        android:layout_width="548dp"
        android:layout_height="90dp"
        android:alpha="0.6"
        android:background="#A27B5C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/parabula_back"
        android:layout_width="28dp"
        android:layout_height="25dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.87"
        app:srcCompat="@drawable/back_button" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/special"
        android:gravity="center"
        android:text="Parabula"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>