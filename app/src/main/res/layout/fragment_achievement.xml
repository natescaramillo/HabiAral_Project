<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AchievementFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:alpha="0.6"
        android:background="#A27B5C" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="Parangal"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="@font/special"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="93dp">

        <!-- Row 1 -->

        <View
            android:id="@+id/view5"
            android:layout_width="92dp"
            android:layout_height="88dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="53dp"
            android:background="@drawable/rounded_button_beige"
            android:clickable="true" />

        <View
            android:id="@+id/view6"
            android:layout_width="92dp"
            android:layout_height="88dp"
            android:layout_alignTop="@id/view5"
            android:layout_marginStart="18dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@+id/view5"
            android:background="@drawable/rounded_button_beige" />

        <View
            android:id="@+id/view7"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:layout_alignTop="@id/view5"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/view6"
            android:background="@drawable/rounded_button_beige" />


        <View
            android:id="@+id/view8"
            android:layout_width="92dp"
            android:layout_height="88dp"
            android:layout_below="@id/view5"
            android:layout_alignStart="@id/view5"
            android:layout_marginStart="2dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/rounded_button_beige" />

        <View
            android:id="@+id/view9"
            android:layout_width="92dp"
            android:layout_height="88dp"
            android:layout_below="@id/view6"
            android:layout_marginStart="19dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/view8"
            android:background="@drawable/rounded_button_beige" />

        <View
            android:id="@+id/view10"
            android:layout_width="92dp"
            android:layout_height="88dp"
            android:layout_below="@id/view7"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/view9"
            android:background="@drawable/rounded_button_beige" />

        <View
            android:id="@+id/view11"
            android:layout_width="90dp"
            android:layout_height="88dp"
            android:layout_below="@id/view8"
            android:layout_alignStart="@id/view8"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button_beige" />

        <View
            android:id="@+id/view12"
            android:layout_width="92dp"
            android:layout_height="88dp"
            android:layout_below="@id/view9"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/view11"
            android:background="@drawable/rounded_button_beige" />

        <View
            android:id="@+id/view13"
            android:layout_width="94dp"
            android:layout_height="86dp"
            android:layout_below="@id/view10"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/view12"
            android:background="@drawable/rounded_button_beige" />

    </RelativeLayout>

</FrameLayout>
