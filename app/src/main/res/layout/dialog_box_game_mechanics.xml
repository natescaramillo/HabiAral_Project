<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- Main Popup Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_mechanics_container"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:background="@drawable/pop_up_game_mechanic_color"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_line2"
        app:layout_constraintEnd_toStartOf="@+id/vertical_line2"
        app:layout_constraintStart_toStartOf="@+id/vertical_line1"
        app:layout_constraintTop_toTopOf="@+id/horizontal_line1">

        <!-- Top Highlight Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/game_mechanics_highlight"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/homepage_design_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_game_mechanics_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/special"
                android:text="Game Mechanics"
                android:textColor="#3E1919"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/img_Isara"
                android:layout_width="27dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.953"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.444"
                app:srcCompat="@drawable/design_x_close" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Scrollable Content (below highlight) -->
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarSize="0.5dp"
            app:layout_constraintTop_toBottomOf="@id/game_mechanics_highlight"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:clipToPadding="false">

                <!-- First SearchBar Section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:background="@drawable/search_bar"
                    android:backgroundTint="#97684A">

                    <TextView
                        android:id="@+id/first_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ala_sans"
                        android:text="Baguhan"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/first_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/ala_sans"
                        android:justificationMode="inter_word"
                        android:textColor="#fff"
                        android:text="@string/baguhan_description"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/first_Title"
                        app:layout_constraintVertical_bias="0.491" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!-- Second SearchBar Section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="12dp"
                    android:background="@drawable/search_bar"
                    android:backgroundTint="#97684A">

                    <TextView
                        android:id="@+id/second_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ala_sans"
                        android:text="Husay (400 na puntos)"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/second_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/ala_sans"
                        android:justificationMode="inter_word"
                        android:text="@string/husay_description"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/second_Title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!-- Third SearchBar Section -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:padding="12dp"
                    android:background="@drawable/search_bar"
                    android:backgroundTint="#97684A">

                    <TextView
                        android:id="@+id/third_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ala_sans"
                        android:text="Dalubhasa(800 na puntos)"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/third_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/ala_sans"
                        android:justificationMode="inter_word"
                        android:text="@string/dalubhasa_description"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/third_Title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <!-- Button moved here -->

            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Outer Guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>
