<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/dialog_box">

    <TextView
        android:id="@+id/titleGameMechanics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palaro: Mekaniks ng Laro"
        android:gravity="center_horizontal"
        android:fontFamily="@font/special"
        android:textSize="28sp"
        android:textColor="#A27B5C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewGameMechanics"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/titleGameMechanics"
        app:layout_constraintBottom_toTopOf="@+id/buttonClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textGameMechanicsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/special"
            android:textColor="#4C2121"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textIsSelectable="true"/>
    </ScrollView>

    <Button
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isara"
        android:textColor="#4C2121"
        android:background="@drawable/button_color"
        android:fontFamily="@font/special"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>