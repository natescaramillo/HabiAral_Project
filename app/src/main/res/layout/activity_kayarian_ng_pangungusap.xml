<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".KayarianNgPangungusap.KayarianNgPangungusap">

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="93dp"
        android:alpha="0.6"
        android:background="#A27B5C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/special"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="Kayarian ng Pangungusap"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/payak"
        android:layout_width="344dp"
        android:layout_height="88dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_color"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/special"
            android:text="PAYAK"
            android:textColor="#4C2121"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tambalan"
        android:layout_width="342dp"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:background="@drawable/button_color"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/payak">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/special"
            android:text="TAMBALAN"
            android:textColor="#4C2121"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="49dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/square">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hugnayan"
        android:layout_width="342dp"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:background="@drawable/button_color"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tambalan">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/special"
            android:text="HUGNAYAN"
            android:textColor="#4C2121"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="49dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/square">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/langkapan"
        android:layout_width="342dp"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:alpha="0.5"
        android:background="@drawable/button_color"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hugnayan">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/special"
            android:text="LANGKAPAN"
            android:textColor="#4C2121"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="49dp"
            android:layout_height="44dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/square">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
