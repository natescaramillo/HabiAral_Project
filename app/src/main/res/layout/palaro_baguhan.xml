<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questionBaguhan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/question_bg_drawable"
    tools:context=".Activity.PalaroBaguhan">

    <!-- Top guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/special"
        android:text="Punan ang mga patlang"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/topGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/baguhan_instructionText"
        android:layout_width="350dp"
        android:layout_height="74dp"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="#FFEFEA"
        android:fontFamily="@font/special"
        android:gravity="center"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        app:layout_constraintWidth_percent="0.85" />

    <ImageView
        android:id="@+id/characterIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/tarsier_3d"
        app:layout_constraintTop_toBottomOf="@id/baguhan_instructionText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:11"
        app:layout_constraintWidth_percent="0.85" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bar_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/characterIcon"
        app:layout_constraintVertical_bias="1.0">
        <!-- Hearts Row -->
        <LinearLayout
            android:id="@+id/heartsRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottomBar">

            <ImageView
                android:id="@+id/heart01"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/design_heart" />

            <ImageView
                android:id="@+id/heart02"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/design_heart" />

            <ImageView
                android:id="@+id/heart03"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/design_heart" />

            <ImageView
                android:id="@+id/heart04"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/design_heart" />

            <ImageView
                android:id="@+id/heart05"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/design_heart" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/timerBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="32dp"
            android:background="@null"
            android:backgroundTint="#E0E0E0"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/timer_color_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heartsRow" />

        <TextView
            android:id="@+id/answerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/special"
            android:text="Sagot mo:"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timerBar" />

        <!-- Your Original Buttons (unchanged) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timerBar">

        </LinearLayout>

        <!-- Answer Buttons in 2x3 Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timerBar"
            app:layout_constraintVertical_bias="0.746">

            <!-- Answer Buttons in 3x2 Grid -->
            <GridLayout
                android:id="@+id/answerGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="32dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:gravity="center"
                android:rowCount="2">

                <Button
                    android:id="@+id/baguhan_answer1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/answer_option_bg"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/baguhan_answer2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/answer_option_bg"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/baguhan_answer3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/answer_option_bg"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/baguhan_answer4"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/answer_option_bg"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/baguhan_answer5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/answer_option_bg"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/baguhan_answer6"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/answer_option_bg"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp" />

            </GridLayout>

            <!-- Bottom Buttons Side by Side -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/UnlockButtonPalaro1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/rounded_button_achievement"
                    android:fontFamily="@font/special"
                    android:text="Umalis" />

                <Button
                    android:id="@+id/UnlockButtonPalaro"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_achievement"
                    android:fontFamily="@font/special"
                    android:text="Tapos" />
            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
