                        android:src="@drawable/design_lock" />
                </FrameLayout>
            </LinearLayout>

            <!-- PANG-ANGKOP -->
            <LinearLayout
                android:id="@+id/pangakop"
                android:layout_width="333dp"
                android:layout_height="86dp"
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:background="@drawable/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="PANG-ANGKOP(LIGATURE)"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <FrameLayout
                    android:id="@+id/pangAkopLock"
                    android:layout_width="49dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/square">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/design_lock" />
                </FrameLayout>
            </LinearLayout>

            <!-- PADAMDAM -->
            <LinearLayout
                android:id="@+id/padamdam"
                android:layout_width="333dp"
                android:layout_height="86dp"
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:background="@drawable/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="PADAMDAM(INTERJECTION)"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <FrameLayout
                    android:id="@+id/padamdamLock"
                    android:layout_width="49dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/square">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/design_lock" />
                </FrameLayout>
            </LinearLayout>

            <!-- PANGAWING -->
            <LinearLayout
                android:id="@+id/pangawing"
                android:layout_width="333dp"
                android:layout_height="86dp"
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:background="@drawable/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:text="PANGAWING(LINKING VERB)"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <FrameLayout
                    android:id="@+id/pangawingLock"
                    android:layout_width="49dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/square">

                    <ImageView
