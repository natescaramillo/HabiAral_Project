<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".PayakActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/title_Text_payak"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/description_pop_up"
        android:backgroundTint="#A27B5C"
        android:fontFamily="@font/special"
        android:gravity="center"
        android:padding="12dp"
        android:text="Payak"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Description -->
      <TextView
          android:id="@+id/description_text_payak"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:layout_marginTop="264dp"
          android:background="@drawable/background_with_border"
          android:ellipsize="none"
          android:justificationMode="inter_word"
          android:fontFamily="@font/ala_sans"
          android:gravity="start"
          android:paddingVertical="20dp"
          android:paddingHorizontal="15dp"
          android:singleLine="false"
          android:textColor="#000"
          android:textSize="15sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/title_Text_payak" />

    <!-- Example -->

    <TextView
        android:id="@+id/example_Text_payak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/background_with_border"
        android:justificationMode="inter_word"
        android:fontFamily="@font/ala_sans"
        android:paddingVertical="20dp"
        android:paddingHorizontal="15dp"
        android:text=""
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_text_payak" />

      <Button
          android:id="@+id/UnlockButtonPayak"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/rounded_button_achievement"
          android:fontFamily="@font/special"
          android:padding="5dp"
          android:layout_marginVertical="10dp"
          android:text="Pagsusulit"
          android:textColor="#000"
          android:textSize="15sp"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.497"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/example_Text_payak"
          app:layout_constraintVertical_bias="0.936" />

  </androidx.constraintlayout.widget.ConstraintLayout>
