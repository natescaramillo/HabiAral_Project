<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:alpha="0.6"
        android:background="@drawable/homepage_design" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="207dp"
        android:layout_height="84dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/special"
        android:text="Mabuhay! Salamat sa pag gamit!"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/special"
                android:text="Mga Aralin"
                android:textColor="#4C2121"
                android:textSize="25dp" />


            <LinearLayout
                android:id="@+id/bahagi"
                android:layout_width="375dp"
                android:layout_height="117dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/tarshier_homepage1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/special"
                    android:text="Bahagi ng pananalita"
                    android:textColor="#4C2121"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/komprehensyon"
                android:layout_width="375dp"
                android:layout_height="117dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/button_color"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/square" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Komprehensyon"
                    android:textSize="20dp"
                    android:fontFamily="@font/special"
                    android:textColor="#4C2121" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/kayarian"
                android:layout_width="375dp"
                android:layout_height="117dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/button_color"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/square" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kayarian ng Pangungusap"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/special"
                    android:textColor="#4C2121" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/palaro"
                android:layout_width="375dp"
                android:layout_height="117dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/button_color"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:clickable="true"
                android:focusable="true">

                <View
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/square" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Palaro"
                    android:layout_marginLeft="40dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/special"
                    android:textColor="#4C2121" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
