<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/questionHusay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        android:background="@drawable/question_bg_drawable"
        tools:context=".Activity.PalaroHusay">


    <TextView
        android:id="@+id/husay_instructionText"
        android:layout_width="337dp"
        android:layout_height="127dp"
        android:layout_marginTop="48dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_rect"
        android:backgroundTint="#FFEFEA"
        android:fontFamily="@font/special"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/characterIcon"
        android:layout_width="287dp"
        android:layout_height="264dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/tarsier_3d"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.878" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="482dp"
        android:background="@drawable/bottom_bar_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996">

        <LinearLayout
            android:id="@+id/heartsRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottomBar">

            <ImageView
                android:id="@+id/heart01"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/design_heart" />

            <ImageView
                android:id="@+id/heart02"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/design_heart" />

            <ImageView
                android:id="@+id/heart03"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/design_heart" />

            <ImageView
                android:id="@+id/heart04"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/design_heart" />

            <ImageView
                android:id="@+id/heart05"
                android:layout_width="44dp"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                app:srcCompat="@drawable/design_heart" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/timerBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="349dp"
            android:layout_height="41dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@null"
            android:backgroundTint="#E0E0E0"
            android:clipToOutline="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/timer_color_green"
            app:layout_constraintEnd_toEndOf="@+id/whole_answer"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/whole_answer"
            app:layout_constraintTop_toBottomOf="@+id/whole_answer" />

        <TextView
            android:id="@+id/whole_answer"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="#FFEFEA"
            android:fontFamily="@font/special"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/bottomBar"
            app:layout_constraintHorizontal_bias="0.431"
            app:layout_constraintStart_toStartOf="@+id/bottomBar"
            app:layout_constraintTop_toTopOf="@+id/bottomBar"
            app:layout_constraintVertical_bias="0.032" />

        <GridLayout
            android:id="@+id/husay_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="3"
            android:useDefaultMargins="true"
            app:layout_constraintBottom_toTopOf="@id/UnlockButtonPalaro"
            app:layout_constraintEnd_toEndOf="@id/guideline8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/guideline8"
            app:layout_constraintTop_toBottomOf="@id/timerBar"
            app:layout_constraintVertical_bias="0.5">


            <Button
                android:id="@+id/husay_answer1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/answer_option_bg"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/husay_answer2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/answer_option_bg"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/husay_answer3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/answer_option_bg"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/husay_answer4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/answer_option_bg"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/husay_answer5"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/answer_option_bg"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/husay_answer6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/answer_option_bg"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/husay_answer7"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/answer_option_bg"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/husay_answer8"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/answer_option_bg"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:textSize="15sp" />

            <Button
                android:id="@+id/husay_answer9"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:background="@drawable/answer_option_bg"
                android:fontFamily="@font/special"
                android:gravity="center"
                android:textSize="15sp" />

        </GridLayout>

        <Button
            android:id="@+id/UnlockButtonPalaro"
            android:layout_width="121dp"
            android:layout_height="52dp"
            android:background="@drawable/rounded_button_achievement"
            android:fontFamily="@font/special"
            android:text="Tapos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.178"
            app:layout_constraintStart_toStartOf="@+id/guideline8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.958" />

        <Button
            android:id="@+id/UnlockButtonPalaro1"
            android:layout_width="121dp"
            android:layout_height="52dp"
            android:background="@drawable/rounded_button_achievement"
            android:fontFamily="@font/special"
            android:text="Umalis"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            app:layout_constraintHorizontal_bias="0.815"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.956" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />


    </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
