<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LangkapanActivity">


    <Button
        android:id="@+id/UnlockButtonLangkapan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_achievement"
        android:fontFamily="@font/special"
        android:padding="5dp"
        android:text="Pagsusulit"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginVertical="10dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/example_Text_langkapan"
        app:layout_constraintVertical_bias="0.936" />

    <!-- Description -->

    <TextView
        android:id="@+id/description_text_langkapan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_with_border"
        android:ellipsize="none"
        android:inputType="textMultiLine"
        android:justificationMode="inter_word"
        android:paddingVertical="20dp"
        android:paddingHorizontal="15dp"
        android:singleLine="false"
        android:fontFamily="@font/ala_sans"
        android:text=""
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_Text_langkapan" />

    <!-- Example -->

    <TextView
        android:id="@+id/example_Text_langkapan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_with_border"
        android:justificationMode="inter_word"
        android:paddingVertical="20dp"
        android:paddingHorizontal="15dp"
        android:fontFamily="@font/ala_sans"
        android:text=""
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_text_langkapan" />



    <TextView
        android:id="@+id/title_Text_langkapan"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/description_pop_up"
        android:backgroundTint="#A27B5C"
        android:fontFamily="@font/special"
        android:gravity="center"
        android:padding="12dp"
        android:text="Langkapan"
        android:textColor="#fff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
