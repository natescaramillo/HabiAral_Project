<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Panitikan.Panitikan">

    <!-- Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:alpha="0.6"
        android:background="#A27B5C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/special"
            android:gravity="center"
            android:text="Panitikan"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/view1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintVertical_bias="0.481" />

        <ImageView
            android:id="@+id/panitikan_back"
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/view1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view1"
            app:srcCompat="@drawable/back_button" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="33dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/view1"
            app:layout_constraintEnd_toEndOf="@+id/view1"
            app:layout_constraintTop_toTopOf="@+id/view1"
            app:srcCompat="@drawable/white_question_mark" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- BUTTON 1 -->
            <LinearLayout
                android:id="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/verticalLine2"
                app:layout_constraintStart_toStartOf="@+id/verticalLine1"
                app:layout_constraintTop_toBottomOf="@+id/view1">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_image"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_bahagi"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text="Alamat"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>


            <!-- BUTTON 2 -->
            <LinearLayout
                android:id="@+id/epiko"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/verticalLine2"
                app:layout_constraintStart_toStartOf="@+id/verticalLine1"
                app:layout_constraintTop_toBottomOf="@+id/view1">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_image"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_bahagi"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text="Epiko"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- BUTTON 3 -->
            <LinearLayout
                android:id="@+id/maikling_kuwento"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/verticalLine2"
                app:layout_constraintStart_toStartOf="@+id/verticalLine1"
                app:layout_constraintTop_toBottomOf="@+id/view1">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_image"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_bahagi"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text="Maikling kwento"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>

            <!-- BUTTON 4 -->
            <LinearLayout
                android:id="@+id/pabula"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/verticalLine2"
                app:layout_constraintStart_toStartOf="@+id/verticalLine1"
                app:layout_constraintTop_toBottomOf="@+id/view1">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_image"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_bahagi"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text="Pabula"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- BUTTON 5 -->
            <LinearLayout
                android:id="@+id/parabula"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/button_color"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@+id/verticalLine2"
                app:layout_constraintStart_toStartOf="@+id/verticalLine1"
                app:layout_constraintTop_toBottomOf="@+id/view1">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_image"
                    android:clipToOutline="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_bahagi"
                    app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/special"
                    android:gravity="center"
                    android:text="Parabula"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>